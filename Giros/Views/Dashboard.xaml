            <Label Foreground="White" Canvas.Left="94" Canvas.Top="197" Height="26" Width="53">6KM</Label>

            <Button Content="Finish" Background="Green" Canvas.Left="35" Canvas.Top="243" BorderBrush="Green" Height="33" Width="81"></Button>



        </Canvas>


        <Canvas Grid.Row="2" Background="Gray"></Canvas>




    </Grid>
</Window>
